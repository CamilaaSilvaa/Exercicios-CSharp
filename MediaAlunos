using System;
class Media {
  static void Main() {
    double media, nota_1, nota_2, nota_3, nota_4;
    
    Console.WriteLine("Digite a 1 nota");
    nota_1 = double.Parse(Console.ReadLine());
    Console.WriteLine("Digite a 2 nota");
    nota_2 = double.Parse(Console.ReadLine());
    Console.WriteLine("Digite a 3 nota");
    nota_3 = double.Parse(Console.ReadLine());
     Console.WriteLine("Digite a 4 nota");
    nota_4 = double.Parse(Console.ReadLine());
    
    media=(nota_1+nota_2+nota_3+nota_4)/4;
    
    Console.WriteLine(media);
  }
}
